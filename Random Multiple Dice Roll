#include <iostream>
#include <stdlib.h>
#include <time.h>

using namespace std;


int main(){

int choice;
srand(time(0));

cout << endl;
cout << "Enter 1 to select the number of dice, enter 2 to restart program, or 0 to end the program: ";
cin >> choice;

switch(choice)
{
  case 1: cout << "1" << endl;
  
  cout << "Enter number of dice: ";
  int n;
  cin >> n;
  
  for(int i = 0; i < n; i++)
  {
    cout << (rand() % 6) + 1 << " ";
  }
  case 2: cout << "2";
  main();

}
return 0;
}
